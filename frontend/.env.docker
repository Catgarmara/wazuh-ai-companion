# Docker Environment Configuration for Wazuh AI Frontend

# Application Configuration
NEXT_PUBLIC_APP_NAME="Wazuh AI Companion"
NEXT_PUBLIC_APP_VERSION="2.0.0"
NEXT_PUBLIC_APP_DESCRIPTION="Modern AI Web UI for Wazuh AI Companion with comprehensive SIEM integration"

# API Configuration
NEXT_PUBLIC_API_URL=http://localhost:8000
NEXT_PUBLIC_WS_URL=ws://localhost:8000

# Authentication Configuration
NEXT_PUBLIC_AUTH_ENABLED=true
NEXT_PUBLIC_SESSION_TIMEOUT=3600

# WebSocket Configuration
NEXT_PUBLIC_WS_RECONNECT_INTERVAL=5000
NEXT_PUBLIC_WS_MAX_RECONNECT_ATTEMPTS=10

# SIEM Configuration
NEXT_PUBLIC_SIEM_ENABLED=true
NEXT_PUBLIC_SIEM_REFRESH_INTERVAL=30000

# UI Configuration
NEXT_PUBLIC_THEME=dark
NEXT_PUBLIC_SIDEBAR_COLLAPSED=false

# Feature Flags
NEXT_PUBLIC_FEATURE_MODEL_MANAGEMENT=true
NEXT_PUBLIC_FEATURE_SIEM_DASHBOARD=true
NEXT_PUBLIC_FEATURE_THREAT_CORRELATION=true
NEXT_PUBLIC_FEATURE_ALERT_MANAGEMENT=true

# Performance Configuration
NEXT_PUBLIC_CACHE_TTL=300000
NEXT_PUBLIC_REQUEST_TIMEOUT=30000

# Development Configuration (for development builds)
NEXT_PUBLIC_DEBUG=false
NEXT_PUBLIC_LOG_LEVEL=info

# Security Configuration
NEXT_PUBLIC_CSP_ENABLED=true
NEXT_PUBLIC_HTTPS_ONLY=false